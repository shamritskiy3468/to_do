<%= form_for @task, url: problem_tasks_path, method: :post, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :task_name %>
    <%= f.text_field :task_name, class: 'form-control' %>
    <%= f.hidden_field :problem_id, value: @problem.id %>
  </div>
  <div class="form-group">
    <%= f.submit 'Add task', class: 'btn btn-primary'%>
  </div>
<% end %>
