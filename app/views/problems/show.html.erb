<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>
<div>
  <section>
    <h2><%= @problem.name %></h2>
    <%= @problem.created_at %>
    <br><br>
    <%= button_to 'Delete', problem_path(@problem), method: :delete, class: 'btn btn-danger mr-1'%>
    <%= button_to 'Add task', new_problem_task_path(@problem.id), { method: :get, class: 'btn btn-success mr-1'} %>
  </section>
  <hr>
  <section>
    <% @problem.tasks.each do |task| %>
      <%= render 'tasks/task', task: task %>
    <% end %>
  </section>
</div>
</body>
</html>
